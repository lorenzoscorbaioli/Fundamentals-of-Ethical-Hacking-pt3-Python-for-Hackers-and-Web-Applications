                                                                          moduliuniti.py                                                                                                             
import math 
def quadrato():
    lq= int(input('Inserisci il valore dal lato: '))
    print('Perimetro: ',lq*4)
def cerchio():
    raggio= int(input('Inserisci il valore dal raggio: '))
    print('Circonferenza: ',raggio*math.pi*2)
def rettangolo():
    base=int(input('Inserisci il valore della base '))
    altezza=int(input("Inserisci il valore dell'altezza "))
    print('Perimetro: ', base*2+altezza*2)

x = input ('CALCOLATORE\nPremi A) per il perimetro del quadrato\nPremi B) per il perimetro del cerchio\nPremi C) per la circonferenza rettangolo\nPremi qualsiasi altro tasto per uscire\n')

if x=='A':
        quadrato()
elif x=='B':
        cerchio()
elif x=='C':
        rettangolo()
else:
         print('Alla prossima')
